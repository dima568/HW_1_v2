<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dmytry.hw_1_v2.SecondActivity">

    <EditText
        android:id="@+id/editTextUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:height="25dp" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/buttBack_text"
        android:layout_marginTop="49dp"
        android:onClick="backToFirst" />
    <Button
        android:id="@+id/buttonBackText"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/buttBackText_text"
        android:layout_marginTop="109dp"
        android:height="25dp"
        android:onClick="backTextToFirst" />

</RelativeLayout>
